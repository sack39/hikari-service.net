.fv {
    background: #eaf6f3;
    height: 100vh;
    position: relative;
}

.fv__image {
    width: 100%;
    height: 100vh;
    overflow: hidden;
    -webkit-clip-path: circle(100vh at 49% 0);
    clip-path: circle(100vh at 49% 0);
    display: block !important;
}

.fv__image::before {
    content: "";
    aspect-ratio: 824/830;
    display: block;
    width: 100%;
    height: 100vh;
    background-image: url("{{ 'c_img_fv-sp.webp' | asset_url }}");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    -webkit-animation: bgLoop 180s infinite linear;
    animation: bgLoop 180s infinite linear;
}
@-webkit-keyframes bgLoop {
    0% {
        background-position: center;
    }
    25% {
        background-position: right;
    }
    50% {
        background-position: center;
    }
    75% {
        background-position: left;
    }
    100% {
        background-position: center;
    }
}
@keyframes bgLoop {
    0% {
        background-position: center;
    }
    25% {
        background-position: right;
    }
    50% {
        background-position: center;
    }
    75% {
        background-position: left;
    }
    100% {
        background-position: center;
    }
}
@media screen and (min-width: 768px) {
    .fv__image {
        -webkit-clip-path: ellipse(100% 100vh at 50% 0%);
        clip-path: ellipse(100% 100vh at 50% 0%);
    }
    .fv__image::before {
        aspect-ratio: 1920/1407;
        background-image: url("{{ 'c_img_fv.webp' | asset_url }}");
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        -webkit-animation: scaleLoop 60s infinite forwards;
        animation: scaleLoop 60s infinite forwards;
        padding-top: 71%;
    }
}
@-webkit-keyframes scaleLoop {
    0% {
        -webkit-transform: scale(1);
        transform: scale(1);
    }
    95% {
        opacity: 1;
    }
    100% {
        -webkit-transform: scale(1.3);
        transform: scale(1.3);
        opacity: 0;
    }
}
@keyframes scaleLoop {
    0% {
        -webkit-transform: scale(1);
        transform: scale(1);
    }
    95% {
        opacity: 1;
    }
    100% {
        -webkit-transform: scale(1.3);
        transform: scale(1.3);
        opacity: 0;
    }
}

.fv__contents {
    position: absolute;
    bottom: min(202px , 53.87vw);
    /* top: clamp(23.313rem, 18.719rem + 19.6vw, 31.25rem); */
    /* top: clamp(23.313rem, 18.719rem + 19.6vw, 31.25rem); */
    left: 20px;
    }
    @media screen and (min-width: 1024px) {
    .fv__contents {
        bottom: min(149px , 10.35vw);
        /* top: max(28.4vw, 409px); */
        left: initial;
        right: calc(50% + 41px);
        animation: opacityLoop 60s infinite forwards;
    }
}

@keyframes opacityLoop {
    95% {
        opacity: 1;
    }
    100% {
        opacity: 0;
    }
}

.fv__lead1,
.fv__lead2 {
    display: block;
    font-size: 28px;
    font-weight: 700;
    line-height: 150%;
    letter-spacing: 2.24px;
    color: #4ac8c7;
    background: #fdfdfd;
    width: -webkit-fit-content;
    width: -moz-fit-content;
    width: fit-content;
}
@media screen and (min-width: 1024px) {
    .fv__lead1,
    .fv__lead2 {
        font-size: clamp(1.75rem, -1.327rem + 4.81vw, 3rem);
        letter-spacing: 4.8px;
    }
}

.fv__lead1 {
    border-radius: 10px 10px 0px 0px;
    padding: 4px 12px;
}
@media screen and (min-width: 1024px) {
    .fv__lead1 {
        padding: 4px 16px;
    }
}

.fv__lead2 {
    margin-top: 1px;
    border-radius: 0px 10px 10px 10px;
    padding: 4px 16px;
}

.fv__description {
    margin-top: 16px;
}

.fv__description1,
.fv__description2 {
    display: block;
    color: #fdfdfd;
