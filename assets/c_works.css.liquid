.works {
  position: relative;
  padding-block: 64px;
}

@media screen and (min-width: 1024px) {
  .works {
    padding-block: 80px 112px;
  }
}

.works::before,
.works::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 340px;
  z-index: -1;
}

.works::before {
  background: url({{ 'c_bg_works.webp' | asset_url }}) no-repeat center center / cover;
}

.works::after {
  background: rgba(74, 200, 199, 0.7);
}

.works__inner {
}

.works__heading {
  color: #fdfdfd;
}

.works__heading-en {
  color: #fdfdfd;
}

.works__heading-ja {
}

.works__heading-description {
  margin-top: 12px;
}

.works__lists {
  margin-top: 40px;
  position: relative;
}

@media screen and (min-width: 1024px) {
  .works__lists {
    margin-top: 56px;
  }
}

