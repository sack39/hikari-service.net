.c_about .about {
    background: linear-gradient(180deg, #eaf6f3 42.59%, #fdfdfd 100%);
    padding-block: 64px 40px;
    width: 100%;
    overflow: hidden;
}

@media screen and (min-width: 1024px) {
    .c_about .about {
        padding-block: 112px 80px;
    }
}

.c_about .about__inner {
    padding-inline: initial;
}

@media screen and (min-width: 1024px) {
    .c_about .about__inner {
        display: flex;
        padding-inline: 30px;
    }
}

.c_about .about__wrap {
    padding-inline: 20px;
}

@media screen and (min-width: 1024px) {
    .c_about .about__wrap {
        padding-inline: initial;
    }
}


.c_about .about__heading-en {
        justify-content: flex-start;
        letter-spacing: 1.2px;
        font-size: 12px;
}

.c_about .about__contents {
    margin-top: 40px;
}

@media screen and (min-width: 1024px) {
    .c_about .about__contents {
        margin-top: 56px;
        width: clamp(31.313rem, 15.313rem + 25vw, 32.5rem);
    }
}

@media screen and (min-width: 1024px) {
    .c_about .about__heading-ja {
        white-space: nowrap;
    }
}

.c_about .about__text {
    margin-top: 32px;
    text-align: justify;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 240%;
    letter-spacing: 1.12px;
    padding-right: 32px;
}

@media screen and (min-width: 1024px) {
    .c_about .about__text {
        font-size: 16px;
        letter-spacing: 1.28px;
        padding-right: 86px;
    }
}

.button--about {
    margin-top: 40px;
}

@media screen and (min-width: 1024px) {
    .button--about {
        margin-top: 56px;
    }
}

.c_about .about__image {
    padding-block: 40px 68px;
    position: relative;
    width: 100%;
    overflow: hidden;
}

@media screen and (min-width: 1024px) {
    .c_about .about__image {
        overflow: initial;
        padding-block: initial;
    }
}

.c_about .about__image-main {
    display: block;
    width: 355px;
    height: 355px;
    flex-shrink: 0;
    border-radius: 50%;
    background-image: url("{{ 'c_img_about.webp' | asset_url }}");
    background-repeat: no-repeat;
    background-position: 75% 50%;
    background-size: cover;
    margin-inline: auto;
    overflow: hidden;
}

.c_about .about__image-main::after {
    content: "";
    position: absolute;
    width: 355px;
    height: 355px;
    border-radius: 50%;
    background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0) 45.95%,
        rgba(184, 233, 233, 0.27) 75.35%,
        rgba(74, 200, 199, 0.7) 108.11%
    );
}

@media screen and (min-width: 1024px) {
    .c_about .about__image-main {
        width: clamp(31.25rem, 11.039rem + 31.58vw, 32.75rem);
        height: clamp(31.25rem, 11.039rem + 31.58vw, 32.75rem);
        margin-top: 20px;
    }

    .c_about .about__image-main::after {
        width: clamp(31.25rem, 11.039rem + 31.58vw, 32.75rem);
        height: clamp(31.25rem, 11.039rem + 31.58vw, 32.75rem);
        background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0) 35.68%,
        rgba(184, 233, 233, 0.27) 68.65%,
        rgba(74, 200, 199, 0.7) 108.11%
        );
    }
}

.c_about .about__image-deco1,
.c_about .about__image-deco2,
.c_about .about__image-deco3 {
    display: block;
    flex-shrink: 0;
    border-radius: 50%;
    position: absolute;
}

.c_about .about__image-deco1 {
    width: 36px;
    height: 36px;
    background-color: rgba(245, 181, 97, 0.8);
    top: 102px;
    right: calc(50% + 161.5px);
    mix-blend-mode: darken;
}

@media screen and (min-width: 1024px) {
    .c_about .about__image-deco1 {
        width: 48px;
        height: 48px;

        top: calc(20px + 169px);
        left: -20px;
        right: initial;
        transition-delay: 0.5s;
    }
}

.c_about .about__image-deco2 {
    width: 60px;
    height: 60px;
    background-color: rgba(245, 181, 97, 0.5);
    top: 91px;
    left: calc(50% + 149.5px);
}

@media screen and (min-width: 1024px) {
    .c_about .about__image-deco2 {
        width: 80px;
        height: 80px;

        top: calc(20px + 246px);
        right: calc(-59px + -80px);
        left: initial;
        transition-delay: 1.5s;
    }
}

.c_about .about__image-deco3 {
    width: 120px;
    height: 120px;
    background-color: rgba(156, 221, 222, 0.5);
    mix-blend-mode: multiply;
    top: 13px;
    left: calc(50% + 104.59px);
}

@media screen and (min-width: 1024px) {
    .c_about .about__image-deco3 {
        width: 140px;
        height: 140px;

        top: calc(20px + 0);
        right: -50px;
        left: initial;
        transition-delay: 1s;
    }
}

.c_about .about__image-people {
    display: block;
    background: url("{{ 'c_deco_about1.webp' | asset_url }}") no-repeat center center / cover;
    width: 202px;
    height: 137px;
    flex-shrink: 0;
    position: absolute;
    bottom: 0;
    left: calc(50% - 28.5px);
}

@media screen and (min-width: 1024px) {
    .c_about .about__image-people {
        width: 253px;
        height: 170px;

        bottom: -20px;
        left: initial;
        right: -20px;
        transition-delay: 1.5s;
    }
}

.c_about .about__image-man {
    display: block;
    background: url("{{ 'c_deco_about2.webp' | asset_url }}") no-repeat center center / cover;
    width: 65px;
    height: 139px;
    flex-shrink: 0;
    position: absolute;
    bottom: 0;
    right: calc(50% + 103px);
}

@media screen and (min-width: 1024px) {
    .c_about .about__image-man {
        width: 79px;
        height: 169px;

        bottom: -20px;
        right: initial;
        left: 0;
        transition-delay: 2.5s;
    }
}