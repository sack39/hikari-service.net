/* to contact */
.to-contact {
  position: fixed;
  bottom: 20px;
  right: 20px;
  z-index: 30;
  width: 72px;
  height: 72px;
  background-color: #f5b561;
  border-radius: 50%;
  border: 2px solid #fdfdfd;
  display: block !important;
}

@media screen and (min-width: 1024px) {
  .to-contact {
    top: initial;
    bottom: 80px;
    right: 80px;
    width: clamp(4.5rem, 12rem, 12rem);
    height: clamp(4.5rem, 12rem, 12rem);

    display: flex;
    flex-direction: column;
  }

  .to-contact::before {
    content: "お問い合わせ";
    color: #fdfdfd;
    font-size: clamp(0.75rem, 1.4rem, 1.4rem);
    font-style: normal;
    font-weight: 700;
    line-height: 150%;
    letter-spacing: 0.28px;
    white-space: nowrap;

    position: absolute;
    top: 28px;
    left: 50%;
    transform: translateX(-50%);
  }
}

.to-contact::after {
  content: "";
  mask-image: url({{ 'c_icon_mail.svg' | asset_url }});
  background-color: #fdfdfd;
  mask-repeat: no-repeat;
  mask-position: center;
  mask-size: cover;

  display: block;
  width: 28px;
  height: 22px;
  flex-shrink: 0;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

@media screen and (min-width: 1024px) {
  .to-contact::after {
    width: clamp(2.5rem, 5rem, 5rem);
    height: clamp(1.75rem, 3.5rem, 3.5rem);
    /* top: min(57px , 3.96vw); */
    transform: translateX(-50%);
  }
}

/* to-contactホバー時アニメーション */
.to-contact {
transition: all 0.3s;
}

.to-contact:hover {
  background-color: #fdfdfd;
  border: 1px solid #f5b561;
}

.to-contact:hover::before {
  color: #f5b561;
}

.to-contact:hover::after {
  background-color: #f5b561;
}